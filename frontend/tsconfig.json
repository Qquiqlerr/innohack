{
  "compilerOptions": {
      "isolatedModules": false,
      "moduleResolution": "node",
      "esModuleInterop": true,
      "paths": {
          "src/*": ["src/*"],
      },
      "types": ["vite/client"],
      "baseUrl": "./frontend",
      "outDir": "build",
      "sourceMap": false,
      "declaration": true,
      "allowSyntheticDefaultImports": true,
  },
  "exclude": ["node_modules"],
  "include": ["src", "*.ts", "build", "api"]
}