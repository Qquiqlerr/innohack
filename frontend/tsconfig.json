{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "resolveJsonModule": true,
    "jsx": "react",
    "isolatedModules": false,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "paths": {
        "src/*": ["src/*"],
    },
    "types": ["vite/client"],
    "baseUrl": ".",
    "outDir": "build",
    "sourceMap": false,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
  },
  "exclude": ["node_modules"],
  "include": ["src", "*.ts", "build", "api", ".eslintrc.cjs"]
}